<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.createticket.CreateTicketViewController">
   <children>
      <VBox minWidth="700.0" spacing="10.0">
         <children>
            <HBox spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Branch">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="actionComboBox" prefWidth="150.0" promptText="Depatment" />
                        <Label text="Select branch" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="10.0">
                     <children>
                        <Label text="Location (Optional)">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="locationTextField" />
                        <Label text="Set location for the ticket" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox>
               <children>
                  <Label fx:id="labelSubject" text="Subject (Required)">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="Be precise, specific and short" />
                  <TextField fx:id="subjectTextField" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="labelComment" text="Comment (Required)">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="Specifie in greater details" />
                  <TextArea fx:id="descriptionTextArea" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <HBox spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onSubmitButtonClick" text="Submit" />
                  <Button mnemonicParsing="false" onAction="#onResetButtonClick" text="Reset" />
                  <Button cancelButton="true" layoutX="84.0" layoutY="10.0" mnemonicParsing="false" onAction="#onCancelButtonClick" text="Cancel" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding></VBox>
   </children>
</AnchorPane>
