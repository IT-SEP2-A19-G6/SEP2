<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.ticketlist.items.messageitem.MessageItemController"

            style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, black, 10,0,0,0); -fx-background-insets: 5; -fx-background-radius: 2; -fx-padding: 20;">
   <center>
      <VBox prefHeight="46.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="19.0">
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <HBox spacing="5.0">
                           <children>
                              <Label text="ID:" textFill="#767676" />
                              <Label fx:id="labelId" text="Label" textFill="#767676" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="10.0" spacing="5.0">
                           <children>
                              <Label text="Created:" textFill="#767676" />
                              <Label fx:id="labelCreated" text="Label" textFill="#767676" />
                           </children>
                        </HBox>
                        <HBox layoutX="58.0" layoutY="10.0" spacing="5.0">
                           <children>
                              <Label text="Created by:" textFill="#767676" />
                              <Label fx:id="labelCreatedBy" text="Label" textFill="#767676" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="labelMessage" text="Message" textFill="#363636">
                           <font>
                              <Font name="Calibri Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
