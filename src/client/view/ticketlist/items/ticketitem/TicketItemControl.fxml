<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane style="    -fx-background-color: white;     -fx-effect: dropshadow(three-pass-box, black, 10,0,0,0);      -fx-background-insets: 5;       -fx-background-radius: 2;        -fx-padding: 20;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.ticketlist.items.ticketitem.TicketItemController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="labelSubject" prefWidth="300.0" text="subject" textFill="#363636">
                           <font>
                              <Font name="Calibri Bold" size="28.0" />
                           </font>
                        </Label>
                        <Label fx:id="labelStatus" alignment="TOP_RIGHT" prefWidth="100.0" text="status" textFill="#363636">
                           <font>
                              <Font name="Calibri Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="ID:" textFill="#767676" />
                        <Label fx:id="labelId" text="Label" textFill="#767676" />
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="10.0" spacing="5.0">
                     <children>
                        <Label text="Created:" textFill="#767676" />
                        <Label fx:id="labelCreated" text="Label" textFill="#767676" />
                     </children>
                  </HBox>
                  <HBox layoutX="58.0" layoutY="10.0" spacing="5.0">
                     <children>
                        <Label text="Created by:" textFill="#767676" />
                        <Label fx:id="labelCreatedBy" text="Label" textFill="#767676" />
                     </children>
                  </HBox>
                  <HBox layoutX="135.0" layoutY="10.0" spacing="5.0">
                     <children>
                        <Label text="Location:" textFill="#767676" />
                        <Label fx:id="labelLocation" text="Label" textFill="#767676" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Assigned to: " textFill="#767676" />
                  <Label fx:id="labelAssignedTo" text="Label" textFill="#767676" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Label text="Branch: " textFill="#767676" />
                  <Label fx:id="labelBranch" text="Label" textFill="#767676" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
